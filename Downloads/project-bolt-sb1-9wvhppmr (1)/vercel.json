{
    "version":  2,
    "buildCommand":  "cd project && NEXT_IGNORE_TYPE_ERRORS=true npm run build",
    "installCommand":  "cd project && npm install",
    "framework":  "nextjs",
    "outputDirectory":  "project/.next",
    "builds":  [
                   {
                       "src":  "project/package.json",
                       "use":  "@vercel/next"
                   }
               ],
    "headers":  [
                    {
                        "source":  "/(.*)",
                        "headers":  [
                                        {
                                            "key":  "X-Content-Type-Options",
                                            "value":  "nosniff"
                                        },
                                        {
                                            "key":  "X-Frame-Options",
                                            "value":  "DENY"
                                        },
                                        {
                                            "key":  "Referrer-Policy",
                                            "value":  "strict-origin-when-cross-origin"
                                        },
                                        {
                                            "key":  "Permissions-Policy",
                                            "value":  "camera=(), microphone=(), geolocation=()"
                                        }
                                    ]
                    }
                ],
    "buildEnvironment":  {
                             "NODE_VERSION":  "18.x"
                         }
}
